<div class="row">
  <div class="col-xs-3">
    <%= form_tag admin_categories_path, method: :get, class: 'form-search' do %>
      <p>
        <%= text_field_tag :keycategory, params[:keycategory], class: 'nav-search-input' %>
        <%= submit_tag "search", name: nil, class: 'btn btn-primary' %>
      </p>
    <% end %>
  </div>
  <div class="col-xs-6"></div>
  <div class="col-xs-3 text-right">
    <%= new_button(new_admin_category_path) %>
  </div>
  </div>
</div>
<%= paginate @categories, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm", nav_class: "d-inline-b" %>

<table class="table table-striped table-bordered table-hover">
  <thead>
  <tr>
    <th class="text-center">id</th>
    <th class="text-center">name</th>
    <th class="text-center">chinese_name</th>
    <th class="text-center">observation number</th>
    <th class="text-center">operations</th>
  </tr>
  </thead>
  <tbody>
  <% @categories.each do |category| %>
    <tr>
      <td class="text-center"><%= category.id %></td>
      <td class="text-center"><%= category.name %></td>
      <td class="text-center"><%= category.chinese_name %></td>
      <td class="text-center"><%= category.observations.size %></td>
      <td class="text-right">
        <%= show_button(admin_category_path(category)) %>
        <%= edit_button(edit_admin_category_path(category), false, "xs") %>
        <%= destroy_button(admin_category_path(category), true) %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= paginate @categories, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm", nav_class: "d-inline-b" %>
