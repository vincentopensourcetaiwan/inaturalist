<div class="row">
  <div class="col-xs-3">
    <%= form_tag admin_tags_path, method: :get, class: 'form-search' do %>
      <p>
        <%= text_field_tag :keytag, params[:keytag], class: 'nav-search-input' %>
        <%= submit_tag "search", name: nil, class: 'btn btn-primary' %>
      </p>
    <% end %>
  </div>
  <div class="col-xs-6"></div>
  <div class="col-xs-3 text-right">
    <%= new_button(new_admin_tag_path) %>
  </div>
</div>
</div>
<%= paginate @tags, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm", nav_class: "d-inline-b" %>

<table class="table table-striped table-bordered table-hover">
  <thead>
  <tr>
    <th class="text-center">id</th>
    <th class="text-center">name</th>
    <th class="text-center">operations</th>
  </tr>
  </thead>
  <tbody>
  <% @tags.each do |tag| %>
    <tr>
      <td class="text-center"><%= tag.id %></td>
      <td class="text-center"><%= tag.name %></td>
      <td class="text-right">
        <%= show_button(admin_tag_path(tag)) %>
        <%= edit_button(edit_admin_tag_path(tag), false, "xs") %>
        <%= destroy_button(admin_tag_path(tag), true) %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= paginate @tags, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm", nav_class: "d-inline-b" %>
