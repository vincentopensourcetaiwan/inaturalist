<div class="row">
  <div class="col-xs-3">
  </div>
  <div class="col-xs-6"></div>
  <div class="col-xs-3 text-right">
    <%= new_button(new_admin_place_path) %>
  </div>
</div>
</div>
<%= paginate @places, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm", nav_class: "d-inline-b" %>

<table class="table table-striped table-bordered table-hover">
  <thead>
  <tr>
    <th class="text-center">id</th>
    <th class="text-center">name</th>
    <th class="text-center">chinese name</th>
    <th class="text-center">operations</th>
  </tr>
  </thead>
  <tbody>
  <% @places.each do |place| %>
    <tr>
      <td class="text-center"><%= place.id %></td>
      <td class="text-center"><%= place.name %></td>
      <td class="text-center"><%= place.chinese_name %></td>
      <td class="text-right">
        <%= show_button(admin_place_path(place)) %>
        <%= edit_button(edit_admin_place_path(place), false, "xs") %>
        <%= destroy_button(admin_place_path(place), true) %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= paginate @places, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm", nav_class: "d-inline-b" %>
