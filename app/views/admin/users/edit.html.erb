<%= simple_form_for [:admin, @user] do |f| %>
  <div class="form-inputs">
    <%= f.input :role_ids, :collection => Role.all, :as => :check_boxes, :label_method => lambda { |t| t.name.titleize }, :label => false, checked: @user.role_ids %>
    <%= f.input :nickname %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary', id: 'submit' %>
    <a href="<%= admin_users_path %>" class="btn">Cancel</a>
  </div>
<% end %>