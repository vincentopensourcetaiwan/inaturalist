<%= simple_form_for([:admin, @period]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :search_name %>
    <%= f.input :start_year %>
    <%= f.input :start_month %>
    <%= f.input :start_day %>
    <%= f.input :end_year %>
    <%= f.input :end_month %>
    <%= f.input :end_day %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
