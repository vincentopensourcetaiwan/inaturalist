<div class="row">
  <div class="col-xs-3">
  </div>
  <div class="col-xs-6"></div>
  <div class="col-xs-3 text-right">
    <%= new_button(new_admin_period_path) %>
  </div>
</div>
</div>
<%= paginate @periods, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm", nav_class: "d-inline-b" %>

<table class="table table-striped table-bordered table-hover">
  <thead>
  <tr>
    <th class="text-center">id</th>
    <th class="text-center">name</th>
    <th class="text-center">start_year</th>
    <th class="text-center">start_month</th>
    <th class="text-center">start_day</th>
    <th class="text-center">end_year</th>
    <th class="text-center">end_month</th>
    <th class="text-center">end_day</th>
    <th class="text-center">operations</th>
  </tr>
  </thead>
  <tbody>
  <% @periods.each do |period| %>
    <tr>
      <td class="text-center"><%= period.id %></td>
      <td class="text-center"><%= period.name %></td>
      <td class="text-center"><%= period.start_year %></td>
      <td class="text-center"><%= period.start_month %></td>
      <td class="text-center"><%= period.start_day %></td>
      <td class="text-center"><%= period.end_year %></td>
      <td class="text-center"><%= period.end_month %></td>
      <td class="text-center"><%= period.end_day %></td>
      <td class="text-right">
        <%= show_button(admin_period_path(period)) %>
        <%= edit_button(edit_admin_period_path(period), false, "xs") %>
        <%= destroy_button(admin_period_path(period), true) %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= paginate @periods, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm", nav_class: "d-inline-b" %>
