<%= simple_form_for @observation, url: admin_observation_update_category_path(@observation), method: 'post' do |f| %>

  <%= f.input :category_id,
              collection: Category.all,
              as: :radio_buttons,
              label_method: lambda { |category| "#{category.chinese_name}(#{category.name})" },
              label: false,
              checked: @observation.category_id %>

  <div class="form-actions">
    <%= submit_button(f) %>
    <%= show_cancel_link %>
  </div>
<% end %>

